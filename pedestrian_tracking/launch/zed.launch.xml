<launch>

    <!-- Launch ZED wrapper -->
    <include file="$(find-pkg-share zed_wrapper)/launch/zed_camera.launch.py">
      <arg name="camera_model" value="zed2i" />
      <arg name="publish_tf" value="true" />
      <arg name="base_frame" value="zed_link" />
      <arg name="config_path" value="$(find-pkg-share pedestrian_tracking)/config/zed_config.yaml"/>
    </include>

    <!-- convert zed object message to pedestrian type & transform frames -->
    <node pkg="pedestrian_tracking" exec="convert_zed_ped">
    </node>

    <!-- connect zed frame to odom frame-->
    <node pkg="tf2_ros" exec="static_transform_publisher" 
        args="--frame-id odom
              --child-frame-id zed_camera_link
              --x 0
              --y 0
              --z 0
              --roll 0
              --pitch 0
              --yaw 0" >
    </node>

    <!-- TODO add transform from center of the dog to odom frame -->

</launch>
